<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- SETTINGS BUTTON -->
    <ImageView
        android:id="@+id/settings_btn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:contentDescription="settings button"
        android:src="@drawable/settings"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="15dp" />

    <!-- MUSIC BUTTON -->
    <ImageView
        android:id="@+id/music_btn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:contentDescription="ambient music button"
        android:src="@drawable/music_black"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:visibility="visible"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp" />

    <!-- MUSIC ANIMATED BUTTON -->
    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:lottie_rawRes="@raw/music_anim"
        android:contentDescription="ambient music button"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        android:visibility="gone"
        android:id="@+id/music_animated_btn"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp" />

    <!-- CONTAINER -->
    <FrameLayout
        android:id="@+id/frame_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- SESSIONS COUNT TXT -->
    <TextView
        android:id="@+id/sessions_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_regular"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:contentDescription="sessions count"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:text="1 / 4" />

</RelativeLayout>